<article id="post">
    <h1 id="post-title"><%= page.title %></h1>
    <div id="post-memu" >
        <div class="post-author">
            By 
            <span class="page-author">
                <a href="<%= config.url %>" >
                    <%- page.author %>
                  </a>
            </span>
    
        </div>
        <div class="post-date">
            <time id="post-date" datetime="<%=page.date.toJSON()%>">
                <%=date(page.date, 'MMMM DD, YYYY')%>
            </time>
        </div>
        <div class="post-tags">
            <% for(let item of page.tags.data) { %>
            <div class="post-tags">
              <a href="<%= url_for(item.path)%>" title="<%- item.name %>">
                #<%- item.name %>
              </a>
            </div>
            <% } %>
        </div>
    </div>
       
    <div id="post-content" class="markdown-body">
        <%- page.content %>
    </div> 
</article>

<div id="paginator">
    <%- paginator() %>
</div>
<div>
    <%- partial('partials/pagination')%>
</div>

<div>
    <%- partial('partials/waline')%>
</div>
